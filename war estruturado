#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_TERRITORIOS 50
#define MAX_NOME 30

// Struct para representar um território
typedef struct {
    char nome[MAX_NOME];
    char continente[MAX_NOME];
    char dono[MAX_NOME];
    int exercitos;
} Territorio;

// Função para cadastrar um território
void cadastrarTerritorio(Territorio territorios[], int *quantidade) {
    if (*quantidade >= MAX_TERRITORIOS) {
        printf("Número máximo de territórios atingido.\n");
        return;
    }

    printf("\n--- Cadastro de Território ---\n");
    printf("Nome do território: ");
    scanf(" %[^\n]", territorios[*quantidade].nome);
    
    printf("Continente: ");
    scanf(" %[^\n]", territorios[*quantidade].continente);
    
    printf("Dono do território: ");
    scanf(" %[^\n]", territorios[*quantidade].dono);
    
    printf("Número de exércitos: ");
    scanf("%d", &territorios[*quantidade].exercitos);

    (*quantidade)++;
    printf("Território cadastrado com sucesso!\n");
}

// Função para exibir todos os territórios
void exibirTerritorios(Territorio territorios[], int quantidade) {
    if (quantidade == 0) {
        printf("Nenhum território cadastrado.\n");
        return;
    }

    printf("\n--- Territórios Cadastrados ---\n");
    for (int i = 0; i < quantidade; i++) {
        printf("Território #%d:\n", i + 1);
        printf("  Nome: %s\n", territorios[i].nome);
        printf("  Continente: %s\n", territorios[i].continente);
        printf("  Dono: %s\n", territorios[i].dono);
        printf("  Exércitos: %d\n", territorios[i].exercitos);
        printf("---------------------------\n");
    }
}

// Menu principal
int main() {
    Territorio territorios[MAX_TERRITORIOS];
    int quantidade = 0;
    int opcao;

    do {
        printf("\n=== MENU WAR ===\n");
        printf("1. Cadastrar Território\n");
        printf("2. Exibir Territórios\n");
        printf("0. Sair\n");
        printf("Escolha uma opção: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                cadastrarTerritorio(territorios, &quantidade);
                break;
            case 2:
                exibirTerritorios(territorios, quantidade);
                break;
            case 0:
                printf("Saindo do jogo...\n");
                break;
            default:
                printf("Opção inválida. Tente novamente.\n");
        }

    } while (opcao != 0);

    return 0;
}
